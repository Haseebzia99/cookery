<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add/Update Cuisine</h1>

      <%= simple_form_for current_user do |f| %>
      <% if current_user.chef %>
        <%= f.input :cuisine %>
        <%= f.input :biography, as: :text, input_html: {rows: 10, cols: 10} %>
        <div class="photo-upload">
          <%= f.input :photo, as: :file %>
          <%= f.input :chef_photo, as: :file %>
        </div>
      <% else %>    
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :postcode %>
        <%= f.input :biography, as: :text, input_html: {rows: 10, cols: 10} %>
        <div class="photo-upload">
          <%= f.input :photo, as: :file %>
        </div>
      <% end %>
        <%= f.submit class: 'btn btn-dark' %>

        <%= link_to "Back", profile_path(current_user), class: 'btn btn-primary'  %>

      <% end %>
    </div>
  </div>
</div>
