<div>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1576237680582-75be01432ca6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80')">
    <div class="container">
      <h1> Look for your local <strong>Chef</strong> below! üë®‚Äçüç≥ </h1>
        <div class="search_bar">
          <%= simple_form_for :search, url: root_path, method: :get do |f| %>
            <div class="search-form-control form-group">
              <input class="form-control string required" type="text" name="search" id="search_query" />
              <button name="button" type="submit" class="btn btn-flat">
                <i class="fas fa-search"></i>
              </button>
            </div>
          <% end %>
        </div>
          <div class="banner-text" >
            <h2> Hire a chef for your special occasion</h2>
            <h3>Browse our gourmet offerings below: Prepared, Cooked & Served for you<h3>
          </div>
    </div>
  </div>
  


  <div class="card-display-background">
    <div class='card-grid'>
      <% @chefs.each do |chef| %>
        <div class="card-trips">
          <!--<%= image_tag("indian.jpg") %>-->
          <% if chef.chef_photo.attached? %>
          <%= cl_image_tag chef.chef_photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= chef.first_name %></h2>
                <h3><%= chef.cuisine %></h3>
                <h3><%= chef.postcode %> <%= 'üè°' %></h3>
                <%= link_to "Book Me", user_path(chef), class: 'btn btn-dark' %>
              </div>
              <!--<img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />-->
              <% if chef.photo.attached? %>
              <%= cl_image_tag chef.photo.key, class: "card-trip-user avatar-bordered" %>
              <% end %>
            </div>
        </div>
      <% end %>
    </div>
  </div>

</div>

