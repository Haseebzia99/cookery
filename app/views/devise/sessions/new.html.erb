<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f,input :name,  %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", placeholder: 'Enter your email here' } %>

          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", placeholder: 'Enter your password' } %>

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:'btn btn-dark mt-1 mb-1' %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

